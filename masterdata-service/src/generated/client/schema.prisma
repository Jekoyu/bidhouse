// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id            String     @id @default(uuid())
  name          String
  description   String     @db.Text
  startingPrice Decimal    @map("starting_price") @db.Decimal(15, 2)
  status        ItemStatus @default(PENDING)
  createdBy     String     @map("created_by")
  approvedBy    String?    @map("approved_by")
  approvedAt    DateTime?  @map("approved_at")
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  images     ItemImage[]
  categories ItemCategoryMap[]

  @@map("items")
}

model ItemCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  items ItemCategoryMap[]

  @@map("item_categories")
}

model ItemCategoryMap {
  id         String   @id @default(uuid())
  itemId     String   @map("item_id")
  categoryId String   @map("category_id")
  createdAt  DateTime @default(now()) @map("created_at")

  item     Item         @relation(fields: [itemId], references: [id], onDelete: Cascade)
  category ItemCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("item_category_maps")
}

model ItemImage {
  id        String   @id @default(uuid())
  itemId    String   @map("item_id")
  imageUrl  String   @map("image_url")
  isPrimary Boolean  @default(false) @map("is_primary")
  createdAt DateTime @default(now()) @map("created_at")

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@map("item_images")
}

enum ItemStatus {
  PENDING
  APPROVED
  REJECTED
}
