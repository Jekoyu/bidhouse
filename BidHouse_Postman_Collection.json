{
  "info": {
    "_postman_id": "bidhouse-collection-v4",
    "name": "BidHouse Microservices (Automated IDs)",
    "description": "Comprehensive collection with automatic variable capturing for tokens, item IDs, and auction IDs.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"phone\": \"08123456789\",\n    \"password\": \"password123\",\n    \"role\": \"USER\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.environment.set(\"token\", jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@bidhouse.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.environment.set(\"admin_token\", jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@bidhouse.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Masterdata Service",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/categories",
              "host": ["{{base_url}}"],
              "path": ["api", "categories"]
            }
          }
        },
        {
          "name": "Create Item",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.environment.set(\"itemId\", jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Vintage Camera\",\n    \"description\": \"Rare 1970s film camera\",\n    \"startingPrice\": 150.00,\n    \"categories\": [],\n    \"images\": [\n        { \"url\": \"https://example.com/cam.jpg\", \"isPrimary\": true }\n    ]\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/items",
              "host": ["{{base_url}}"],
              "path": ["api", "items"]
            }
          }
        },
        {
          "name": "Approve Item (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/items/{{itemId}}/approve",
              "host": ["{{base_url}}"],
              "path": ["api", "items", "{{itemId}}", "approve"]
            }
          }
        }
      ]
    },
    {
      "name": "Auction Service",
      "item": [
        {
          "name": "Schedule Auction (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.environment.set(\"auctionId\", jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"itemId\": \"{{itemId}}\",\n    \"startTime\": \"2026-01-01T10:00:00Z\",\n    \"endTime\": \"2026-01-02T10:00:00Z\",\n    \"startingPrice\": 200.00\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auctions",
              "host": ["{{base_url}}"],
              "path": ["api", "auctions"]
            }
          }
        },
        {
          "name": "Start Auction (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auctions/{{auctionId}}/start",
              "host": ["{{base_url}}"],
              "path": ["api", "auctions", "{{auctionId}}", "start"]
            }
          }
        },
        {
          "name": "Place Bid",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"auctionId\": \"{{auctionId}}\",\n    \"amount\": 250.00\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/bids",
              "host": ["{{base_url}}"],
              "path": ["api", "bids"]
            }
          }
        },
        {
          "name": "Finish Auction (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auctions/{{auctionId}}/finish",
              "host": ["{{base_url}}"],
              "path": ["api", "auctions", "{{auctionId}}", "finish"]
            }
          }
        }
      ]
    },
    {
      "name": "Log Service",
      "item": [
        {
          "name": "Get Activity Logs",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{admin_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/logs",
              "host": ["{{base_url}}"],
              "path": ["api", "logs"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "admin_token", "value": "", "type": "string" },
    { "key": "itemId", "value": "", "type": "string" },
    { "key": "auctionId", "value": "", "type": "string" }
  ]
}
