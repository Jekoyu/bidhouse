            "body": {
              "mode": "raw",
              "raw": "{\n    \"itemId\": \"{{itemId}}\",\n    \"startTime\": \"{{$isoTimestamp}}\",\n    \"endTime\": \"2026-01-02T10:00:00Z\",\n    \"startingPrice\": 200.00\n}",
              "options": { "raw": { "language": "json" } }
