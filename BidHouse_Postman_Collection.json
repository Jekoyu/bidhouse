            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john{{$randomInt}}@example.com\",\n    \"phone\": \"08{{$randomInt}}{{$randomInt}}\",\n    \"password\": \"password123\",\n    \"role\": \"USER\"\n}",
              "options": { "raw": { "language": "json" } }
